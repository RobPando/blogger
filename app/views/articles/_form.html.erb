<%= form_for(@article, html: {multipart: true}) do |f| %>
	<ul>
		<% @article.errors.full_messages.each do |error| %>
		<li><%= error %></li>
		<% end -%>
	</ul>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :body %>
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.label :tag_list, "Tags" %><br>
		<%= f.text_field :tag_list %>
	</p>
	<p>
		<% if @article.image.exists? %>
		<%= image_tag @article.image.url %><br>
		<%= link_to "Remove", remove_image_article_path(@article), method: :put, data: {confirm: "Do you really want to delete this image?"} %><br>
		<% end -%>
		<%= f.label :image,  "Attach a New Image" %><br>
		<%= f.file_field :image %>
	</p>
	<p><%= f.submit %></p>
<% end %>